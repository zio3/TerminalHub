    private async Task ProcessReceivedData(Guid sessionId, string data)
    {
        try
        {
            var sessionInfo = sessions.FirstOrDefault(s => s.SessionId == sessionId);
            if (sessionInfo == null)
            {
                Logger.LogWarning("[ProcessReceivedData] セッションが見つかりません: SessionId={SessionId}", sessionId);
                return;
            }

            var isActive = activeSessionId == sessionId;

            // スクロールバック保持用バッファに追記（常時有効）
            sessionInfo.AppendToTerminalBuffer(data);

            // バッファキャプチャが有効な場合は追記（デバッグ用）
            sessionInfo.AppendToBuffer(data);

            // Claude Codeの場合、"No conversation found to continue"エラーをチェック
            // ただし、処理中（Claude が出力中）の場合は誤検出を防ぐためスキップ
            // エラーメッセージはセッション開始直後に表示されるため、ProcessingStartTime が null の場合のみ検出
            if (sessionInfo.TerminalType == TerminalType.ClaudeCode &&
                sessionInfo.ProcessingStartTime == null &&  // 処理開始前のみ検出
                IsClaudeContinueError(data) &&
                sessionInfo.Options.ContainsKey("continue") &&
                !sessionInfo.HasContinueErrorOccurred)
            {
                // フラグを設定して重複送信を防ぐ
                sessionInfo.HasContinueErrorOccurred = true;

                Logger.LogInformation("'No conversation found to continue' エラーを検出しました。セッションを再作成します: SessionId={SessionId}",
                    sessionId);

                // セッション再起動のコマンドを送信
                _ = InvokeAsync(async () =>
                {
                    await RecreateSessionWithoutContinue(sessionId);
                });
                return;
            }

            // 処理中の場合、アニメーションパターン（スピナー文字）を検出したらタイムアウトを延長
            // ジッター対策により、完全なステータス行ではなく部分的な更新（スピナー文字のみ）が送られることがある
            OutputAnalyzerService.CheckAnimationPatternAndResetTimer(data, sessionInfo);

            // アクティブセッションの場合は直接ターミナルに出力
            if (isActive && activeTerminal != null)
            {
                await TerminalService.WriteToTerminalAsync(activeTerminal, data);

                // 接続直後（バッファ復元直後）は出力解析をスキップ
                if (!sessionInfo.IsRecentConnection)
                {
                    _ = InvokeAsync(() =>
                    {
                        OutputAnalyzerService.AnalyzeOutput(data, sessionInfo, activeSessionId ?? Guid.Empty,
                            (id, status) => InvokeAsync(() =>
                            {
                                RequestDebouncedStateChange();
                            }));
                    });
                }
            }
            else
            {
                // 非アクティブセッションの場合もデータを処理（UIは更新しない）
                // 接続直後（バッファ復元直後）は出力解析をスキップ
                if (!sessionInfo.IsRecentConnection)
                {
                    // 非アクティブセッションはステータス更新のみ行い、UI更新は行わない
                    OutputAnalyzerService.AnalyzeOutput(data, sessionInfo, activeSessionId ?? Guid.Empty, null);
                }
            }
        }
        catch (Exception)
        {
            // ProcessReceivedData error
        }
    }

    /// <summary>
    /// デバウンスされたStateHasChanged()をリクエスト
    /// 高頻度の呼び出しを間引いてパフォーマンスを改善
    /// </summary>
    private void RequestDebouncedStateChange()
    {
        var now = DateTime.Now;
        var elapsed = (now - _lastStateChangedTime).TotalMilliseconds;

        if (elapsed >= StateChangeDebounceMs)
        {
            // デバウンス間隔を超えていれば即座に更新
            _lastStateChangedTime = now;
            _stateChangePending = false;
            StateHasChanged();
        }
        else if (!_stateChangePending)
        {
            // まだ保留中でなければ、遅延実行をスケジュール
            _stateChangePending = true;
            var delay = StateChangeDebounceMs - (int)elapsed;
            _ = Task.Delay(delay).ContinueWith(_ =>
            {
                _ = InvokeAsync(() =>
                {
                    if (_stateChangePending)
                    {
                        _stateChangePending = false;
                        _lastStateChangedTime = DateTime.Now;
                        StateHasChanged();
                    }
                });
            });
        }
        // 既に保留中の場合は何もしない（次の遅延実行で更新される）
    }



